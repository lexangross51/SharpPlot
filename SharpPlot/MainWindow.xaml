<Window x:Class="SharpPlot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SharpPlot"
        Width="1600" Height="900"
        MinWidth="400" MinHeight="400"
        x:Name="MainForm" SizeChanged="MainWindow_OnSizeChanged">
    <DockPanel x:Name="MainDockPanel">
        <Menu DockPanel.Dock="Top"> 
            <MenuItem Header="File"/>
            <MenuItem Header="Settings"/>
        </Menu>
        <TabControl DockPanel.Dock="Top">
            <TabItem x:Name="Graph2DItem" Header="Graph 2D">
                <TabItem.Content>
                    <Grid x:Name="MainGrid2D"/>
                </TabItem.Content>
            </TabItem>
            <TabItem x:Name="Graph3DItem" Header="Graph 3D">
                <TabItem.Content>
                    <Grid x:Name="MainGrid3D"/>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>